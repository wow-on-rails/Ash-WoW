<%= form_for(:account, :url => session_path(:account)) do |f| %>
	<%= content_tag(:div, id: 'user') do %>
		<%= email_field_tag :email, params[:email], :id => 'pseudo' %>
	<% end %>
	<%= content_tag(:div, id: 'password') do %>
		<%= password_field_tag :password,'', :id => 'pass' %>
	<% end %>
	<%= content_tag(:div, id: 'connexion') do %>
		<%= submit_tag "LOG IN", :id => 'connect' %>
	<% end %>
	<%= link_to "Password forgotten ?", new_password_path(:account), :class => 'link' %>
    <br>
    <%= link_to 'Create an account', registration_path(:account), :class => 'link' %>
<% end %>